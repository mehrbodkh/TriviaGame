<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.startscreen.StartTriviaFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/intro_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_svg_01"
        android:layout_marginStart="?attr/spaceXLarge"
        android:layout_marginEnd="?attr/spaceXLarge"
        android:layout_marginBottom="?attr/spaceLarge"
        android:layout_marginTop="?attr/spaceXLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/game_info"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/game_info"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="?attr/spaceXLarge"
        android:layout_marginEnd="?attr/spaceXLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/spaceLarge"
        android:text="@string/game_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_button"
        android:layout_width="0dp"
        android:layout_height="?attr/buttonHeightLarge"
        android:layout_marginStart="?attr/spaceXLarge"
        android:layout_marginEnd="?attr/spaceXLarge"
        android:layout_marginBottom="?attr/spaceLarge"
        android:text="@string/start_game_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>